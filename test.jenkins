#!groovy
// Check slave properties
properties ([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
        }
    triggers { pollSCM('* * * * *')}
    options {
        buildDiscarder (logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
        stage("Hostname") {
            steps {
                sh 'ssh root@192.168.8.112 \'hostname\''
            }
        }
        stage("Uptime") {
            steps {
                sh 'ssh root@192.168.8.112 \'uptime\''
            }
        }
        stage("Update the system") {
            steps {
                sh 'ssh root@192.168.8.112 \'apt update\''
            }
        }
        stage("Check nginx") {
            steps {
                sh 'ssh root@192.168.8.112 \'systemctl status nginx\''
            }
        }
}
}
